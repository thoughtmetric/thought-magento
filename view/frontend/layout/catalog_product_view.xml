<?xml version="1.0"?>
<page layout="1column"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="ThoughtMetric\OrderTracking\Block\AddToCart"
                   name="thoughtmetric.add_to_cart"
                   template="ThoughtMetric_OrderTracking::add_to_cart.phtml"
                   before="-" />
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block class="ThoughtMetric\OrderTracking\Block\ViewContent"
                   name="thoughtmetric.view_content"
                   template="ThoughtMetric_OrderTracking::view_content.phtml"
                   before="-" />
        </referenceContainer>
    </body>
</page>
